<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x550"
        android:background="@mipmap/mi"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_centerVertical="true"
                android:src="@mipmap/back" />

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/back"
                android:text="返回"
                android:textSize="@dimen/x36" />

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="预览"
                android:textSize="@dimen/x36" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y40"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/feng"
                android:layout_width="@dimen/x240"
                android:layout_height="86dp"
                android:layout_gravity="center"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/fengmian"
                android:textColor="#fff"
                android:layout_width="@dimen/x240"
                android:layout_height="@dimen/y55"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#53C2F5"
                android:layout_toRightOf="@id/fengmian"
                android:text="设置封面"
                android:textSize="@dimen/x36" />


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:background="#8DA1F0">

        <TextView
            android:id="@+id/tongbu"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x40"
            android:text="设置封面-----"
            android:textSize="@dimen/x36" />

        <LinearLayout
            android:id="@+id/len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tongbu"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:background="@mipmap/qqkongjian" />

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@id/len"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:background="@mipmap/pyq" />

            <TextView
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈" />
        </LinearLayout>

        <TextView
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@id/linq"
            android:text="------" />
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/y40"
            android:background="@mipmap/suo"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#A2DEFA"
        >
        <EditText
            android:padding="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A2DEFA"
            android:hint="点击输入视频简介..."
            android:textColorHint="#fff"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/fabu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:background="#29B6F6"
        android:gravity="center"
        android:text="发布"
        android:textColor="#fff"
        android:textSize="@dimen/x40" />

</LinearLayout>