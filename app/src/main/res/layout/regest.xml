<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login1"
    android:baselineAligned="false"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/regest_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/iv_back"
            />
        <TextView
            android:id="@+id/regest_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号?"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/logo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/myshape3"
        android:layout_gravity="center"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/regest_phone"
                android:layout_marginTop="10dp"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="输入手机号"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#9A726E"

                />
        </RelativeLayout>
        <EditText
            android:id="@+id/regest_pwd"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入大小写和数字密码不能超过8位"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="#9A726E"
            />
    </LinearLayout>
    <Button
        android:id="@+id/regest_regest"
        android:layout_marginTop="30dp"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/orangeyuan"
        android:gravity="center"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="#fff"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/regest_yklog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:layout_gravity="center"
        android:textColor="#fff"
        />

</LinearLayout>